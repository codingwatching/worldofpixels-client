{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "docker exec -t owop_cli make -j`nproc` \"${input:buildTarget}\" && docker exec owop_cli bash -c 'echo r > /tmp/reloader'",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
	],
	"inputs": [
		{
			"id": "buildTarget",
			"type": "pickString",
			"description": "Build Target",
			"options": ["clean", "all", "dbg", "udbg", "rel"],
			"default": "all"
		}
	]
}
